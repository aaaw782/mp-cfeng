
.main-page{  
  height: 100%  
}  

/* 主页 */  
.home {  
  position: absolute;  
  width: 750rpx;  
  height: 100%;  
  background-color: white;  
  z-index: 1;  
}  
 
/* 遮罩层 */  
.bg {    
  display: none;    
  position: fixed;    
  top: 0%;    
  left: 0%;    
  width: 100%;    
  height: 100%;    
  background-color: black;    
  z-index: 1001;    
  -moz-opacity: 0.3;    
  opacity: 0.30;    
  transition:width 2s;  
  filter: alpha(opacity=30);    
}   

 /* 侧滑栏 */  
.page_tab {  
  height: 100%;  
  position: fixed;  
  background-color: white;  
  z-index: 1002;
  transition: All 0.4s ease;  
  -webkit-transition: All 0.4s ease;  
}  


.slider-btn {
  display: flex;
  flex-direction: row;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 1.4rem;
  margin: 0 20rpx;
}

.slider-btn-search {
  background:#fe8f2b;
  color: white;
  flex: 1;
  margin: 0 10rpx;
  border-radius: 6rpx;
  padding: 10rpx 0rpx;
}

.slider-btn-reset {
  background:#f4f4f4;
  color: #333333;
  flex: 1;
  margin: 0 10rpx;
  border-radius: 6rpx;
  padding: 10rpx 0rpx;
}

  

